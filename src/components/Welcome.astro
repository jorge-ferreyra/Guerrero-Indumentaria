---
import './Welcome.css';
import CardProduct from "./CardProduct.astro";
import productos from "../data/productos.json";
import Layout from '../layouts/Layout.astro';

---

<Layout>
	<div class="center">
		<div class="titulo">
			<h1>Cat√°logo</h1>
		</div>
		{
			productos.map((item) => (
				<CardProduct 
					id={item.id}
					nombre={item.nombre}
					precio={item.precio}
					imagen={item.imagen}
				/>
			))
		}
	</div>
</Layout>
